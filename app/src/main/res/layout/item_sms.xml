<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_sms_image"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_sms_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/item_sms_image"
        android:padding="10dp"
        android:text="15612144751"

        android:textColor="@color/black"

        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_sms_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/item_sms_phone"
        android:layout_toRightOf="@id/item_sms_image"
        android:paddingBottom="10dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="这是一个软件的测试版本，我们使用这个进行相应的测试工作，然后我们可以收..."

        android:textColor="#999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_sms_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_sms_phone"
        android:layout_alignBottom="@id/item_sms_phone"
        android:padding="10dp"
        android:text="2016-01-13"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"


        android:textSize="10sp" />

</RelativeLayout>